<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    <ImageView
        android:src="@drawable/notepad"
        android:tint="@color/colorPrimaryDarkest"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        -->
    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        android:scrollbars="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/kind"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/detail_height"
                    style="@style/CommonText"/>

                <Spinner
                    android:id="@+id/spinnerAddkind"
                    android:gravity="start"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryLightest" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/category"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/detail_height"
                    style="@style/CommonText"/>

                <Spinner
                    android:id="@+id/spinnerAddcategory"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryLightest" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/price"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/detail_height"
                    style="@style/CommonText"/>

                <EditText
                    android:id="@+id/textAddPrice"
                    android:inputType="number"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryLightest" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/season"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/detail_height"
                    style="@style/CommonText"/>

                <Spinner
                    android:id="@+id/spinnerAddseason"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryLightest" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/CommonText"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/detail_height"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/size" />

                <EditText
                    android:id="@+id/textAddSize"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/flexboxLayoutSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                android:visibility="gone">
            </com.google.android.flexbox.FlexboxLayout>

            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryLightest" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/brand"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/detail_height"
                    style="@style/CommonText"/>

                <EditText
                    android:id="@+id/textAddBrand"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/flexboxLayoutBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                android:visibility="gone">
            </com.google.android.flexbox.FlexboxLayout>

            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryLightest" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/boughtDate"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/detail_height"
                    style="@style/CommonText"/>

                <EditText
                    android:id="@+id/textAddBoughtDate"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryLightest" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/owner"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/detail_height"
                    style="@style/CommonText"/>

                <EditText
                    android:id="@+id/textAddOwner"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/flexboxLayoutOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                android:visibility="gone">
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/buttonAdd"
        android:text="@string/add"
        style="@style/NiceButton"
        android:layout_gravity="bottom|center"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</FrameLayout>